<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Usuários</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav>
            <h1>Gestão de Bibliotecas</h1>
            <ul>
                <li><a href="/">Início</a></li>
                <li><a href="/livros">Livros</a></li>
                <li><a href="/autores">Autores</a></li>
                <li><a href="/categorias">Categorias</a></li>
                <li><a href="/acervo">Acervo</a></li>
                <li><a href="/reservas">Reservas</a></li>
                <li><a href="/bibliotecas">Bibliotecas</a></li>
                <li><a href="/usuarios">Usuários</a></li>
            </ul>
        </nav>
    </header>

    <main class="container">
        <h2>Cadastrar Usuário</h2>
        <form id="formUser">
            <div class="form-group">
                <label>Nome Completo:</label>
                <input type="text" name="nome" required>
            </div>
            <div class="form-group">
                <label>CPF:</label>
                <input type="text" name="cpf" required>
            </div>
            <div class="form-group">
                <label>Idade:</label>
                <input type="number" name="idade">
            </div>
            <div class="form-group">
                <label>Nível de Acesso:</label>
                <select name="nivel">
                    {{#each niveis}}
                        <option value="{{this.id}}">{{this.nome}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label>Código da Carteirinha (Opcional - Gera automático):</label>
                <input type="text" name="codigoCarteira" placeholder="Deixe em branco para gerar auto">
            </div>

            <button type="submit">Cadastrar</button>
        </form>

        <h2 style="margin-top: 40px;">Usuários Cadastrados</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Nível</th>
                    <th>Carteirinha</th>
                </tr>
            </thead>
            <tbody>
                {{#each usuarios}}
                <tr onclick="window.location.href='/usuarios/{{this.id}}'" style="cursor:pointer">
                    <td>{{this.id}}</td>
                    <td>{{this.nome}}</td>
                    <td>{{this.cpf}}</td>
                    <td>{{this.nivelLabel}}</td>
                    <td>{{this.carteiraCodigo}}</td>
                </tr>
                {{else}}
                <tr><td colspan="5">Nenhum usuário cadastrado.</td></tr>
                {{/each}}
            </tbody>
        </table>
    </main>

    <script>
        document.getElementById('formUser').addEventListener('submit', async (e) => {
            e.preventDefault();
            const data = Object.fromEntries(new FormData(e.target));
            
            try {
                const res = await fetch('/usuarios', {
                    method: 'POST', 
                    headers: {'Content-Type': 'application/json'}, 
                    body: JSON.stringify(data)
                });
                
                if(res.ok) window.location.reload();
                else {
                    const err = await res.json();
                    alert('Erro: ' + (err.error || 'Falha ao criar'));
                }
            } catch (error) {
                window.location.reload();
            }
        });
    </script>
</body>
</html>