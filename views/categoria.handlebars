<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Categorias</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav>
            <h1>Gestão de Bibliotecas</h1>
            <ul>
                <li><a href="/">Início</a></li>
                <li><a href="/livros">Livros</a></li>
                <li><a href="/autores">Autores</a></li>
                <li><a href="/categorias">Categorias</a></li>
                <li><a href="/acervo">Acervo</a></li>
                <li><a href="/reservas">Reservas</a></li>
                <li><a href="/bibliotecas">Bibliotecas</a></li>
                <li><a href="/usuarios">Usuários</a></li>
            </ul>
        </nav>
    </header>

    <main class="container">
        <h2>Nova Categoria</h2>
        <form id="formCat">
            <div class="form-group">
                <label>Descrição (Nome):</label>
                <input type="text" name="descricao" required placeholder="Ex: Ficção Científica">
            </div>
            <div class="form-group">
                <label>Código:</label>
                <input type="text" name="codigo" required placeholder="Ex: FIC-001">
            </div>
            <button type="submit">Cadastrar</button>
        </form>

        <h2 style="margin-top: 40px;">Categorias Existentes</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Descrição</th>
                    <th>Código</th>
                </tr>
            </thead>
            <tbody>
                {{#each categorias}}
                <tr onclick="window.location.href='/categorias/{{this.id}}'" style="cursor:pointer">
                    <td>{{this.id}}</td>
                    <td>{{this.descricao}}</td>
                    <td>{{this.codigo}}</td>
                </tr>
                {{else}}
                <tr><td colspan="3">Nenhuma categoria cadastrada.</td></tr>
                {{/each}}
            </tbody>
        </table>
    </main>

    <script>
        document.getElementById('formCat').addEventListener('submit', async (e) => {
            e.preventDefault();
            const data = Object.fromEntries(new FormData(e.target));
            
            try {
                const res = await fetch('/categorias', {
                    method: 'POST', 
                    headers: {'Content-Type': 'application/json'}, 
                    body: JSON.stringify(data)
                });
                if(res.ok) window.location.reload();
                else {
                    const err = await res.json();
                    alert('Erro: ' + (err.error || 'Falha'));
                }
            } catch (e) { window.location.reload(); }
        });
    </script>
</body>
</html>