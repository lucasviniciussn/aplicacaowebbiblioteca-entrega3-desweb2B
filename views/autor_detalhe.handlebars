<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Detalhes do Autor</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav>
            <h1>Gestão de Bibliotecas</h1>
            <ul>
                <li><a href="/">Início</a></li>
                <li><a href="/livros">Livros</a></li>
                <li><a href="/autores">Autores</a></li>
                <li><a href="/categorias">Categorias</a></li>
                <li><a href="/acervo">Acervo</a></li>
                <li><a href="/reservas">Reservas</a></li>
                <li><a href="/bibliotecas">Bibliotecas</a></li>
                <li><a href="/usuarios">Usuários</a></li>
            </ul>
        </nav>
    </header>

    <main class="container">
        <h2>Editar Autor: {{autor.nome}}</h2>
        
        <form id="formEdit">
            <div class="form-group">
                <label>Nome Completo:</label>
                <input type="text" name="nome" value="{{autor.nome}}" required>
            </div>
            
            <div class="form-group">
                <label>Nacionalidade:</label>
                <input type="text" name="nacionalidade" value="{{autor.nacionalidade}}">
            </div>

            <div class="form-group">
                <label>Biografia:</label>
                <textarea name="biografia" rows="5" style="width: 100%; padding: 8px;">{{autor.biografia}}</textarea>
            </div>

            <div class="actions" style="margin-top: 20px;">
                <button type="submit">Salvar Alterações</button>
                <button type="button" class="delete" style="background-color: #e74c3c; margin-left: 10px;" onclick="deletar()">Excluir Autor</button>
            </div>
        </form>
    </main>

    <script>
        const id = "{{autor.id}}";

        document.getElementById('formEdit').addEventListener('submit', async (e) => {
            e.preventDefault();
            const data = Object.fromEntries(new FormData(e.target));
            
            try {
                const res = await fetch('/autores/' + id, { 
                    method: 'PUT', 
                    headers: {'Content-Type': 'application/json'}, 
                    body: JSON.stringify(data)
                });
                
                if(res.ok) {
                    alert('Autor atualizado com sucesso!');
                    window.location.reload();
                } else {
                    const err = await res.json();
                    alert('Erro: ' + (err.error || 'Falha ao atualizar'));
                }
            } catch (error) {
                alert('Erro de conexão: ' + error.message);
            }
        });

        async function deletar() {
            if(confirm('Tem certeza que deseja excluir este autor? Se houver livros vinculados a ele, a exclusão será bloqueada.')) {
                try {
                    const res = await fetch('/autores/' + id, { method: 'DELETE' });
                    
                    if(res.ok) {
                        window.location.href = '/autores';
                    } else {
                        const err = await res.json();
                        alert('Não foi possível excluir: ' + (err.error || 'Erro desconhecido'));
                    }
                } catch (error) {
                    alert('Erro de conexão: ' + error.message);
                }
            }
        }
    </script>
</body>
</html>